{% extends 'base.html.twig' %}

{% block title %}Empleo index{% endblock %}

{% block body %}
    <h1>Empleo index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for empleo in empleos %}
            <tr>
                <td>{{ empleo.id }}</td>
                <td>
                    <a href="{{ path('empleo_show', {'id': empleo.id}) }}">show</a>
                    <a href="{{ path('empleo_edit', {'id': empleo.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="2">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('empleo_new') }}">Create new</a>
{% endblock %}
